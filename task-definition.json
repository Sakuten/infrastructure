[
  {
    "cpu": 256,
    "essential": true,
    "image": "${image_url}",
    "memory": 512,
    "name": "${container_name}",
    "environment": [
      {
        "name": "FLASK_CONFIGURATION",
        "value": "deployment"
      }, {
        "name": "SECRET_KEY",
        "value": "${secret_key}"
      }, {
        "name": "DATABASE_URL",
        "value": "${database_url}"
      }, {
        "name": "RECAPTCHA_SECRET_KEY",
        "value": "${recaptcha_secret_key}"
      }
    ],
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 8080
      }
    ],
    "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
            "awslogs-group": "${log_group_name}",
            "awslogs-region": "${log_group_region}"
        }
    }
  }
]
